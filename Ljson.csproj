      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="README.ua.md" Pack="true" PackagePath="">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
